@model FoodWeb.Models.RestaurantInfo

@{
    ViewData["Title"] = "Restaurant infomation";
}

<h2 style="color: white">@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Index" method="post" class="w-50">
    <div class="mb-3">
        <label asp-for="Name" class="form-label text-white">Restaurant name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label text-white">Address</label>
        <textarea asp-for="Address" class="form-control" rows="3" style="white-space: pre-wrap;"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactPhone" class="form-label text-white">Phone number</label>
        <input asp-for="ContactPhone" class="form-control" />
        <span asp-validation-for="ContactPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactEmail" class="form-label text-white">Email</label>
        <input asp-for="ContactEmail" class="form-control" />
        <span asp-validation-for="ContactEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}