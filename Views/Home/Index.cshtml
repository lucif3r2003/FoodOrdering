@{
    Layout = null;
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Home - FoodWeb</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('./Images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .home-box {
            animation: fadeIn 1.2s ease;
            background: white;
            padding: 2rem 3rem;
            border-radius: 16px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        .btn-custom {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
<div class="home-box fade-in">
    <h2 class="mb-4">@ViewBag.Message</h2>
    <div class="d-grid gap-3">
        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-custom">Login</a>
        <a href="@Url.Action("Register", "Account")" class="btn btn-outline-dark btn-custom">Register</a>
    </div>
</div>
</body>
</html>